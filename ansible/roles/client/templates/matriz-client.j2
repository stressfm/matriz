[program:matriz-client]
environment={% for k, v in env.iteritems() %}{% if not loop.first %},{% endif %}{{ k }}="{{ v }}"{% endfor %}

command=bash -c "sleep 5 && python {{ project_name }}/client.py"

directory= {{ deploy_dir }}/{{ project_name }}
user= {{ deploy_user }}
autostart=True
autorestart=True
redirect_stderr=True
priority=699                  ; the relative start priority (default 999)
stopasgroup=true             ; send stop signal to the UNIX process group (default false)

stdout_logfile={{ deploy_dir }}/{{ project_name }}/matriz-client.log
stderr_logfile={{ deploy_dir }}/{{ project_name }}/matriz-client.log
